.row {
  display: flex;
  border-bottom: 1px solid #ccc;
  color: #666;
  font-size: 16px;
}
.row .title {
  padding-left: 10px;
  width: 100px;
  line-height: 50px;
}
.row .info {
  flex: 1;
  line-height: 50px;
}
.row .info input {
  display: block;
  height: 50px;
  color: #666;
}
.btn {
  line-height: 38px;
  background: #03bbd5;
  width: 90%;
  text-align: center;
  color: #fff;
  border-radius: 5px;
  margin: 20px auto;
}
.success {
  text-align: center;
  line-height: 200px;
}
.success icon {
  margin-right: 15px;
}
.skip {
  line-height: 38px;
  text-align: center;
  width: 90%;
  margin: 0 auto;
  border-radius: 5px;
  background: #03bbd5;
  color: #fff;
}