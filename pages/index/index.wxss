page {
  height: 100%;
}
.map-container {
  position: absolute;
  top: 0;
  bottom: 40px;
  left: 0;
  right: 0;
}
.map-container .map {
  width: 100%;
  height: 100%;
  position: relative;
}
.btns {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  background: #03bbd5;
  display: flex;
}
.btns .btn {
  flex: 1;
  line-height: 40px;
  text-align: center;
  color: #fff;
}
.btns .btn:first-child {
  background: #ff9700;
}